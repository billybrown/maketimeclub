<html class="no-js" lang="en">
    <head>
        <meta charset="utf-8">
        <title>{{ site.title }}</title>
        <meta name="description" content="{{ site.description }}">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <link rel="stylesheet" href="css/main.css">

        <link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
        
        <link rel="icon" type="image/png" sizes="64x64" href="favicon.png">

    </head>

    <body class="page {{#if shortcode}}page-{{shortcode}}{{/if}} {{#each bodyclass}}{{.}} {{/each}}">

        <!--[if lte IE 9]>
        <div class="browsehappy">
            <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        </div>
        <![endif]-->

        <header class="mainHeader" role="banner">
            <div class="constrained">
                <div class="pageTitle"><a href="index.html"><span class="make">Make</span> <span class="time">Time</span> <span class="club">Club</span></a></div>
            </div>
        </header>

        <main class="main constrained" role="main">

            {{#if projects}}
            <section class="about-section">
                <h1>{{title}}</h1>
                <div class="description">
            {{/if}}

            {{> body}}

            {{#if projects}}
                <p class="github"><a href="{{github}}" target="_blank">on github</a></p>
                <ul class="tags">
                    {{#each page.tags}}
                        <li><span class="tag">{{.}}</span></li>
                    {{/each}}
                </ul>
            </section>
            {{/if}}

            {{#if projects}}
                {{> imageList}}
                {{> back-section}}
            {{/if}}


        </main><!--/.main-->

        <footer class="mainFooter" role="footer">
            <div class="constrained">
                <div class="contact-info">Contact <a href="mailto:b@illbrown.com">bill</a> for more info or whatever about MTC</div>
            </div>
        </footer>

    </body>
</html>